<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="darkTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@android:color/black</item>
    <item name="colorSecondary">@android:color/white</item>
    <item name="colorAccent">@android:color/white</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="hintTextColor">@android:color/white</item>
    <item name="android:windowBackground">@android:color/black</item>

</style>

    <style name="lightTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorSecondary">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="hintTextColor">@android:color/black</item>
        <item name="android:windowBackground">@android:color/white</item>


    </style>

    <style name="Widget.Support.CoordinatorLayout" parent="android:Widget">
        @null
    </style>

    <style name="BottomNavigationLight" parent="BottomNavigationLight" tools:ignore="ResourceCycle">
        <item name="android:background">@android:color/white</item>
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>

    </style>

    <style name="BottomNavigationBlack" parent="BottomNavigationBlack" tools:ignore="ResourceCycle">
        <item name="android:background">@android:color/black</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>

    </style>




</resources>
